FROM registry.redhat.io/rhosp-rhel8/openstack-nova-compute:16.1
MAINTAINER Nuage OpenStack Engineering opensource@nuagenetworks.net


LABEL name="nuagenetworks/rhosp16-openstack-nova-compute-20-10-4"
LABEL version="20.10.4"


LABEL maintainer="opensource@nuagenetworks.net"
LABEL vendor="Nuage"
LABEL release="1"
LABEL summary="Red Hat OpenStack Platform 16.1 nova-compute Nuage Nova Plugin"
LABEL description="Red Hat OpenStack Platform 16.1 nova-compute Nuage Nova Plugin"

USER root

RUN yum -y update-minimal --security --sec-severity=Important --sec-severity=Critical

COPY RPM-GPG-KEY-Nuage /tmp/RPM-GPG-KEY-Nuage
COPY nuage.repo /etc/yum.repos.d/nuage.repo



RUN yum install --disablerepo "*" --enablerepo Nuage fp-vdev-remote os-vif-6wind-plugin -y



RUN yum clean all
RUN rm -f /etc/yum.repos.d/nuage.repo

COPY licenses /licenses

USER nova